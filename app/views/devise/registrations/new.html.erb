<body class="new-user-top">

  <%= render "categories/new_header" %>

  <div class="new-user-body">
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
      <div class='form-wrap'>
        <div class='form-header'>
          <h1 class='form-header-text'>
            ユーザー登録
          </h1>
        </div>

        <%= render 'shared/error_messages', model: @user %>

        <div class="body-message">  
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">メールアドレス※必須</label>
            </div>
            <%= f.email_field :email, class:"input-name", id:"email", placeholder:"recoli@gmail.com" %>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">パスワード※必須</label>
            </div>
            <%= f.password_field :password, class:"input-name", id:"password", placeholder:"6文字以上の半角英数字" %>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">パスワード(確認)※必須</label>
            </div>
            <%= f.password_field :password_confirmation, class:"input-name", id:"password-confirmation", placeholder:"同じパスワードを入力" %>
          </div>
          
          <div>
            <%= f.submit "新規登録", class:"new-regist-btn btn-text" %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="user-btn">
      <i class="fas fa-arrow-circle-left"></i>
      <%= link_to '戻る', root_path, class:"btn-text" %>
    </div> 
  </div>

  <%= render "categories/new_footer" %>

</body>

